<!-- TRANSACTIONS LIST -->
<!-- | -->
<!-- | -->
<div class="box-size transactions custom rounded-5 shadow-sm p-3 mb-2 bg-secondary">
  <ul class="nav tabs-underlined" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <span class="nav-link tab-underlined active" id="bookings-tab" data-bs-toggle="tab" data-bs-target="#bookings-tab-pane" role="tab" aria-controls="bookings-tab-pane" aria-selected="true">Expense</span>
    </li>
    <li class="nav-item" role="presentation">
      <span class="nav-link tab-underlined" id="requests-tab" data-bs-toggle="tab" data-bs-target="#requests-tab-pane" role="tab" aria-controls="requests-tab-pane" aria-selected="false">Income</span>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <!-- Expense tab -->
    <div class="tab-pane fade py-3 show active" id="bookings-tab-pane" role="tabpanel" aria-labelledby="bookings-tab" tabindex="0">
      <div class="container px-0">
        <div class="row fw-semibold text-muted text-uppercase small border-bottom py-2 align-items-center justify-content-between">
          <div class="col-4 text-start">
            <div>Transaction</div>
          </div>
          <div class="col-4 text-start">
            <div>Category</div>
          </div>
          <div class="col-4 text-end">
            <div>Amount</div>
          </div>
        </div>
        <% @transactions_expense.where(user_id: current_user.id).order(created_at: :desc).select { |t| t.category&.title != "Income" }.each do |transaction| %>
          <div class="row align-items-center border-bottom py-2 align-items-center justify-content-between">
            <div class="col-4 d-flex flex-column">
              <div class="text-light-grey"><%= transaction.date %></div>
              <div><%= transaction.description %></div>
            </div>
            <div class="col-4">
              <div><%= transaction.category&.title %></div>
            </div>
            <div class="col-4 text-end">
              <div class=" <%= transaction.amount.to_f < 0 ? 'text-danger' : 'text-success' %>">
                <%= "¥#{number_with_delimiter(transaction.amount)}" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <!-- Income tab -->
    <div class="tab-pane fade py-3" id="requests-tab-pane" role="tabpanel" aria-labelledby="requests-tab" tabindex="0">
      <div class="container px-0">
        <div class="row fw-semibold text-muted text-uppercase small border-bottom py-2">
          <div class="col-4 text-center">
            <div class="text-justify">Date / Description</div>
          </div>
          <div class="col-4 text-center">
            <div class="text-justify">Category</div>
          </div>
          <div class="col-4 text-center">
            <div class="text-justify">Amount</div>
          </div>
        </div>
        <% @transactions_income.where(user_id: current_user.id).order(created_at: :desc).select { |t| t.category&.title == "Income" }.each do |transaction| %>
          <div class="row align-items-center border-bottom py-2">
            <div class="col-4 d-flex flex-column text-center">
              <div class="text-justify"><%= transaction.date %></div>
              <div class="text-justify"><%= transaction.description %></div>
            </div>
            <div class="col-4 text-center">
              <div class="text-justify"><%= transaction.category&.title %></div>
            </div>
            <div class="col-4 text-center">
              <div class="text-justify text-success"><%= "¥#{transaction.amount}" %></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
