<!-- TITLE -->
<!-- | -->
<div class="box-size">
  <div id="header">
    <h2 class="d-flex">Transactions </h2>
  </div>
</div>
<!-- | -->
<!-- BALANCE BOX -->
<!-- | -->
<!-- | -->
<div id="dashboard_stats_container" class="d-flex flex-row transactions custom box-size p-0 gap-3 mb-5">
  <div id="last_month_comparison_stat" class="flex-fill rounded-5 shadow-sm p-3 stats_background bg-primary text-white">
    <div class="row g-3">
      <div class="col-12 text-center">
        <div class="fw-bold fs-3">Available Balance:</div>
        <div class="fs-1 fw-bold">
          <%= number_to_currency(@available_balance, unit: "¥", precision: 0, delimiter: ",") %>
        </div>
      </div>
      <div class="col-6">
        <div class="fw-bold">
          Total Income: </div>
        <div class="fs-3 fw-bold">
          <%= number_to_currency(@total_income, unit: "¥", precision: 0, delimiter: ",") %>
        </div>
      </div>
      <div class="col-6 text-end">
        <div class="fw-bold"><%= range_text(@range) %></div>
        <div class="fs-3 fw-bold"><%= number_to_currency(@total_spent, unit: "¥", precision: 0, delimiter: ",") %></div>
      </div>
    </div>
  </div>
</div>
