<% if draft.present? %>
  <div class="box-size mt-3">
    <div class="rounded-4 shadow p-3 bg-white d-flex justify-content-between align-items-start">
      <div>
        <div class="fw-bold">Confirm this transaction?</div>
        <ul class="mb-2">
          <li><strong>Amount:</strong> Â¥<%= number_with_delimiter(draft["amount"].to_i) %></li>
          <li><strong>Type:</strong> <%= draft["transaction_type"].to_s.capitalize %></li>
          <li><strong>Date:</strong> <%= draft["date"] %></li>
          <li><strong>Category:</strong> <%= draft["category_title"] %></li>
          <li><strong>Description:</strong> <%= draft["description"] %></li>
        </ul>
      </div>

      <div class="d-flex gap-2">
        <%= form_with url: confirm_chat_transaction_path, method: :post do %>
          <%= hidden_field_tag :payload, signed_draft %>
          <%= submit_tag "Confirm", class: "btn btn-success" %>
        <% end %>

        <%= button_to "Cancel",
                      dismiss_chat_transaction_path,
                      method: :post,
                      class: "btn btn-outline-secondary",
                      form: { data: { turbo_confirm: "Discard this draft?" } } %>
      </div>
    </div>
  </div>
<% end %>
