
<%= simple_form_for transaction do |f| %>
  <% if expense %>
    <%= hidden_field_tag :type, "income" %>
  <% else %>
    <%= hidden_field_tag :type, "expense" %>
  <% end %>

  <%= f.input :description, placeholder: "Items", required: true, label: false, input_html: { class: "my-4" } %>
  <%= f.input :amount, as: :integer, placeholder: "Price", required: true, label: false, input_html: { class: "my-4 w-100" } %>
  <%= f.association :category, collection: categories, prompt: "Select a Category", required: true, label: false, input_html: { class: "my-4" } %>
  <%= f.input :date, as: :date, required: true, label: false, input_html: { class: "my-4" } %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
