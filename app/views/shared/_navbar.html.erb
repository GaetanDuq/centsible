        <span class="navbar-toggler-icon"></span>
      </button>
      <!-- Collapsible menu directly below the button -->
      <div class="collapse position-absolute end-0 mt-2" id="navbarMenu">
        <div class="card card-body p-2">
          <ul class="navbar-nav">
            <li class="nav-item"><%= link_to "Profile", "#", class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Settings", "#", class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Transactions", transactions_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Chat with AI", messages_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Savings", "#", class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Budget", "#", class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Categories", categories_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Log out", "#", class: "nav-link", data: {turbo_method: :delete} %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
