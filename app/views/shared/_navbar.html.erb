    <!-- Brand -->
    <%= link_to root_path, class: "navbar-brand centsible-logo m-0" do %>
      <%= image_tag "Centsible logo.png" %>
    <% end %>
    <h2 class="centsible custom text-center">Centsible</h2>
    <!-- Button + Collapsible Menu -->
    <div class="dropdown">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu"
