<%# BALANCE %>
<div id="balance_box" class="box-size mb-4">
  <div class="rounded-5 shadow-sm p-4 bg-success text-white d-flex justify-content-between align-items-center gap-3 flex-wrap">
    <div>
      <div class="fw-bold">Available Balance:</div>
      <div class="fs-1 fw-bold">
        <%= number_to_currency(@available_balance, unit: "¥", precision: 0, delimiter: ",") %>
      </div>
    </div>
    <div class="text-end ms-auto">
      <div class="fw-bold"><%= spent_label(@range) %></div>
      <div class="fs-3 fw-bold">
        <%= number_to_currency(@total_spent, unit: "¥", precision: 0, delimiter: ",") %>
      </div>
    </div>
  </div>
</div>
